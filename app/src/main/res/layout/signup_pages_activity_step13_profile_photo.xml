<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 상단 AppBar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="8dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back_ios_24"
            android:contentDescription="뒤로가기" />
    </LinearLayout>

    <!-- 본문 -->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="76dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필을 설정해주세요."
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/12"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="end"
            android:paddingTop="4dp" />

        <Space android:layout_width="match_parent" android:layout_height="50dp" />

        <!-- 프로필 이미지 -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_circle_gray"
                android:contentDescription="프로필 이미지" />

            <!-- 우측 하단 수정 아이콘 (선택 후 표시) -->
            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|bottom"
                android:layout_margin="4dp"
                android:background="@android:color/white"
                android:padding="2dp"
                android:src="@drawable/ic_edit_24"
                android:visibility="gone" />
        </FrameLayout>

        <Space android:layout_width="match_parent" android:layout_height="12dp" />

        <!-- 닉네임 표시(빈 문자열이면 그냥 빈칸) -->
        <TextView
            android:id="@+id/tvNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- 완료 / 시작하기 버튼 -->
        <Button
            android:id="@+id/btnComplete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="완료"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="#B3E5FC"
            android:enabled="false"
            android:layout_marginBottom="30dp" />

        <!-- 완료 후 바뀌는 버튼 (초기엔 GONE) -->
        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="늘액션 시작하기"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="#00C8E5"
            android:visibility="gone"
            android:layout_marginBottom="30dp" />
    </LinearLayout>

    <!-- 로딩 인디케이터 -->
    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
