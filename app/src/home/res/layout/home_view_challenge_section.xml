<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="챌린지 운동 모임"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/cardWeeklyChallenge"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFF3E0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_flag_24"
                app:tint="#FB8C00"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:text="주간 챌린지"
                android:textColor="#FB8C00"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Space android:layout_width="12dp" android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/cardMyGroup"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#E8F5E9"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_group_24"
                app:tint="#43A047"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:text="나의 운동 모임"
                android:textColor="#43A047"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
