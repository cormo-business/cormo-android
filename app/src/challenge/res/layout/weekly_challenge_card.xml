<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="20dp"
    android:background="@drawable/bg_weekly_challenge">

    <ImageView
        android:id="@+id/medal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/medal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="22dp"
        />
    <ImageView
        android:id="@+id/btn_close"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_x"
        />

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/medal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        >
        <TextView
            android:id="@+id/txt_weekly_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주간 챌린지"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txt_exercise"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7일 연속으로 운동하기"
            android:textColor="#CCFFFFFF"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toEndOf="@+id/medal"
            app:layout_constraintTop_toBottomOf="@+id/txt_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/monday"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_doughnut_clear"
                />
            <View
                android:id="@+id/tuesday"
                android:layout_marginStart="8dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_doughnut_clear"
                />
            <View
                android:id="@+id/wednesday"

                android:layout_marginStart="8dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_doughnut_clear"
                />
            <View
                android:id="@+id/thursday"
                android:layout_marginStart="8dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_doughnut_no"
                />
            <View
                android:id="@+id/friday"
                android:layout_marginStart="8dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_doughnut_no"
                />
            <View
                android:id="@+id/saturday"
                android:layout_marginStart="8dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_doughnut_no"
                />
            <View
                android:id="@+id/sunday"
                android:layout_marginStart="8dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_doughnut_no"
                />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>