<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/challengeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- (1) 배경 이미지 -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/todays_exercise_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 상단 고정 높이 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/headerGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="240dp"
        android:orientation="horizontal"/>

    <!-- (2) 스크롤 콘텐츠(미션 맵) : 헤더 높이만큼 아래에서 시작 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/headerGuide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/challenge_view_mission_map"/>

            <!-- 데모 여백 -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="400dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- (3) 상단 고정: 레벨/진행상황 카드 -->
    <LinearLayout
        android:id="@+id/headerFixed"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:background="#CCFFFFFF"
        android:orientation="vertical"
        android:paddingTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/challenge_view_level_status"/>
        <include layout="@layout/challenge_view_progress_status"/>
    </LinearLayout>

    <!-- (4) 우하단 고정: 주간 챌린지 (접힘/펼침) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/weeklyChallengeCard"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/purple_500"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/weeklyChallengeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <!-- 접힘 상태(아이콘+텍스트) -->
            <LinearLayout
                android:id="@+id/collapsedRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/ic_emoji_events_24"
                    app:tint="@android:color/white"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:text="주간 챌린지"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- 펼침 상태(상세 내용) -->
            <LinearLayout
                android:id="@+id/expandedCol"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="주간 챌린지"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="7일 연속으로 운동하기"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="진행 상황"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvWeeklyProgress"
                        android:text="3/7일"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- 점 형태 진행도 -->
                <LinearLayout
                    android:id="@+id/dotsRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnJoinWeekly"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:text="참여하기"
                    app:backgroundTint="@android:color/white"
                    android:textColor="@color/purple_500"
                    app:cornerRadius="8dp"/>
            </LinearLayout>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
