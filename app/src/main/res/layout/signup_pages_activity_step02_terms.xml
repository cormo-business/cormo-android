<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp">

        <!-- 상단 바 (뒤로가기) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical">


            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back_ios_24"
                android:contentDescription="뒤로가기" />
        </LinearLayout>

        <!-- 제목/진행도 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용 약관 동의"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/12"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="end"
            android:paddingTop="4dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!-- 전체동의 -->
        <LinearLayout
            android:id="@+id/layoutAllAgree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_allagree_grey_8dp">

            <ImageView
                android:id="@+id/iconAllAgree"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@android:color/black"
                android:src="@drawable/ic_radio_button_unchecked_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="네, 모두 동의합니다." />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!-- 이용약관 (필수) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/cbTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용약관 " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(필수)"
                android:textColor="#03A9F4" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_border_8dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- 개인정보 (필수) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/cbPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인정보 이용 동의 " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(필수)"
                android:textColor="#03A9F4" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_border_8dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- 동의 버튼 -->
        <Button
            android:id="@+id/btnAgree"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="동의합니다."
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="#B3E5FC"
            android:enabled="false"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="30dp" />

    </LinearLayout>
</ScrollView>
